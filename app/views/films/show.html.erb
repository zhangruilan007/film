<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@film) %>
      <label class="label label-success">已收藏电影</label>
      <%= link_to("Unfavorite film", quit_film_path(@film), method: :review, class: "btn btn-default") %>
      <% else %>
      <label class="label label-warning">未收藏电影</label>
      <%= link_to("Favorite film", join_film_path(@film), method: :review, class: "btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("Write a Review", new_film_review_path(@film), class: "btn btn-default pull-right")%>

     <% if current_user && current_user == @film.user %>
    <%= link_to("Edit", edit_film_path(@film), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @film.title  %></h2>
<hr/>
  <p><%= @film.description %></p>

    <table class="table">
    <thead>
     <tr>
        <th>影评内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div class="text-center">
  <%= will_paginate @reviews %>
</div>

</div>
